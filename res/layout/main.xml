<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical">

	<ImageButton
			android:id="@+id/playPauseButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/play_pause_override"
			android:background="@null"
			android:layout_gravity="center_horizontal"
			android:contentDescription="Play/Pause" />

	<ImageButton
			android:id="@+id/nextTrackButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/next_track_override"
			android:background="@null"
			android:layout_gravity="center_horizontal" />

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal">

		<ImageButton
				android:id="@+id/thumbsDownButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/thumbs_down_override"
				android:background="@null" />

		<ImageButton
				android:id="@+id/thumbsUpButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/thumbs_up_override"
				android:background="@null" />

	</LinearLayout>
</LinearLayout>

